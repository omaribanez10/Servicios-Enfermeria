<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.omar10ibanez.serviciosenfermeria.usuario.LoginUser"
    android:background="@drawable/backgground_app_nurse_perfil"

    >



    <LinearLayout
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo:"
        android:textStyle="bold"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="-15dp"/>

    <EditText
        android:id="@+id/editTextMailLoginUser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:inputType="textEmailAddress"
        android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña:"
            android:textStyle="bold"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="-15dp"
           />

        <EditText
        android:id="@+id/editTextPasswordLoginUser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:textStyle="bold"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button

            android:id="@+id/butonRegistrarLog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Registrarse"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/capsule"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/buttonLoggeo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Ingresar"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/capsule"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="¿Olvidaste tu contraseña?"
        android:textStyle="bold"/>

</LinearLayout>