<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.omar10ibanez.serviciosenfermeria.enfermera.PublicarServicioEnfermera"
    android:background="@drawable/backgground_app_nurse_perfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id Enfermero(a)"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="-20dp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/editText03serEnf"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:inputType="number"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="-20dp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/editText01serEnf"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="-20dp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/editText02serEnf"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:inputType="textLongMessage"
                android:textStyle="bold"/>

        </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:layout_marginTop="50dp">

                <Button
                    android:id="@+id/buttonRegistroserEnf"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Publicar"
                    android:textStyle="bold"
                    android:background="@drawable/capsule"
                    android:textColor="#ffffff"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
