<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_width="300dp">


    <LinearLayout
        android:id="@+id/linearlayoutserviciosaceptadosdialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_dark"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <TextView

                android:id="@+id/idservicioaceptadodialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:text="Id"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tituloservicioaceptadodialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:text="Titulo"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/descripciondervicioaceptadodialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:text="Descripcion"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/telefonoserivicioaceptadodialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:text="Telefono"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/direccionservicioaceptadodialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:text="Direccion"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/nombreUserservicioaceptadodialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:text="Nombre"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/apellidoUserservicioaceptadodialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:text="Apellido"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >



                <Button
                    android:id="@+id/buttoncancelarservicioaceptadodialog"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/capsule"
                    android:text="Cancelar "
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <Button

                    android:id="@+id/buttonescribiraceptadodialog"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/capsule"
                    android:text="Escribir"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_weight="1"/>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>




</RelativeLayout>