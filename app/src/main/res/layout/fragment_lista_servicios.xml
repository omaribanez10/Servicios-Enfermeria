<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.omar10ibanez.serviciosenfermeria.consulta.ListaServicios"
    android:background="@color/white"
    android:id="@+id/servicioLayoutItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp">




        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Id Servicio:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="2"

                />

            <TextView
                android:id="@+id/IdServicioDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Id Servicio:"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="2"

                />

            <TextView
                android:id="@+id/TituloServiDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="2"

                />

            <TextView
                android:id="@+id/descripcionServiBD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefono:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="2"
                />

            <TextView
                android:id="@+id/telefonoServiDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefono"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="2"

                />

            <TextView
                android:id="@+id/direccionServiBD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Fecha:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/FechaServiDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textStyle="bold"

                />

        </LinearLayout>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="2"
                />

            <TextView
                android:id="@+id/HoraServiDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textStyle="bold"
                />

        </LinearLayout>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Nombre:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NombreuserServiDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textStyle="bold"

                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Apellido:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ApellidoUserServiDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textStyle="bold"

                />

        </LinearLayout>




    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue_heaven"
        android:textStyle="bold"/>

</LinearLayout>
