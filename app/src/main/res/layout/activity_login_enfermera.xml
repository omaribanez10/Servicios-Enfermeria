<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.omar10ibanez.serviciosenfermeria.enfermera.LoginEnfermera"
   android:background="@drawable/backgground_app_nurse_perfil"
    >


    <LinearLayout
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Correo:"
            android:layout_marginLeft="35dp"
            android:textStyle="bold"
            android:layout_marginBottom="-5dp"
            />

    <EditText
        android:id="@+id/editText01MailLogEnf"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:inputType="textEmailAddress"
        android:textStyle="bold"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Contraseña:"
            android:layout_marginLeft="35dp"
            android:textStyle="bold"
            android:layout_marginBottom="-15dp"
            android:layout_marginTop="20dp"
            />
    <EditText
        android:id="@+id/editText02logPasswordEnf"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button

            android:id="@+id/butonRegistrarlogEnf"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Registrarse"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/capsule"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/buttonLoggeologEnf"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Ingresar"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/capsule"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="¿Olvidaste tu contraseña?"
        android:textStyle="bold"/>

</LinearLayout>