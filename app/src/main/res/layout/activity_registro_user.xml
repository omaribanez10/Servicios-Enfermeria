<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.omar10ibanez.serviciosenfermeria.usuario.RegistroUser"
    android:background="@drawable/backgground_app_nurse_perfil"
    >
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">



       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_gravity="center"
                   android:layout_marginTop="15dp"
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:id="@+id/usuario_imagen_registro"
                   android:src="@drawable/icons8_user"
                   android:scaleType="centerCrop"
                   />

           </LinearLayout>



       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="40dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Nombre:"
               android:layout_marginLeft="35dp"
               android:layout_marginBottom="-20dp"
               android:textStyle="bold"
               />
       <EditText
        android:id="@+id/editText01"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:inputType="textPersonName"
        android:textStyle="bold"/>
       </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Apellido:"
               android:layout_marginLeft="35dp"
               android:layout_marginBottom="-20dp"
               android:textStyle="bold"
               />
  <EditText
        android:id="@+id/editText02"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
      android:inputType="textPersonName"
      android:textStyle="bold"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Correo:"
               android:layout_marginLeft="35dp"
               android:layout_marginBottom="-20dp"
               android:textStyle="bold"
               />
    <EditText
        android:id="@+id/editText03"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:inputType="textEmailAddress"
        android:textStyle="bold"/>
       </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="ContraseÃ±a:"
               android:layout_marginLeft="35dp"
               android:layout_marginBottom="-20dp"
               android:textStyle="bold"
               />
    <EditText
        android:id="@+id/editText04"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:textStyle="bold"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Telefono:"
               android:layout_marginLeft="35dp"
               android:layout_marginBottom="-20dp"
               android:textStyle="bold"
               />
    <EditText
        android:id="@+id/editText05"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:inputType="phone"
        android:textStyle="bold"/>
       </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right">


        <Button
            android:id="@+id/buttonRegistroUser"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Registrarse"
            android:background="@drawable/capsule"
            android:textStyle="bold"
            android:textColor="#ffffff"/>
            </LinearLayout>
        </LinearLayout>
   </ScrollView>
</LinearLayout>
